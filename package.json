{
  "name": "cmghelp",
  "displayName": "CMG Help",
  "description": "CMG Syntax Help",
  "publisher": "rogerio-cunha",
  "version": "0.0.7",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/roger-petro/cmghelp.git"
  },
  "icon": "images/icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",

  "contributes": {

    "commands": [
      {
        "command": "cmghelp.openKeywordUrl",
        "title": "Open Keyword Documentation"
      },
      {
        "command": "cmghelp.enable",
        "title": "Enable Plugin",
        "category": "CMG"
      },
      {
        "command": "cmghelp.disable",
        "title": "Disable Plugin",
        "category": "CMG"
      },
      {
        "command": "cmghelp.showLogs",
        "title": "Show Logs",
        "category": "CMG"
      }
    ],
    "menus" : {
      "commandPalette": [
        {
          "command": "cmghelp.showLogs"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "CMG Help",
      "properties": {
          "cmghelp.rootPrefix": {
              "type": "string",
              "default": "C:\\Program Files\\CMG\\Manuals",
              "description": "Root prefix directory where the manuals are stored"
          },
          "cmghelp.version": {
              "type": "string",
              "default": "2023.10",
              "description": "Version of the manuals"
          },
          "cmghelp.solver": {
              "type": "string",
              "enum": ["IMEX", "GEM", "STARS"],
              "default": "IMEX",
              "description": "Preferred solver  (IMEX, GEM or STARS) being used to doc lookup"
          },
          "cmghelp.keywordDataPath": {
            "type": "string",
            "default": "${env:USERPROFILE}\\CMGKeywords.json",
            "description": "Path to the CMGKeywords.json file"
          },
          "cmghelp.disable": {
            "type": "boolean",
            "default": false,
            "description": "Disable Plugin Actions"
          }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.54.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
